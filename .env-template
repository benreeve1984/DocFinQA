# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Model Configuration
OPENAI_MODEL=gpt-4o  # or gpt-4o-mini, gpt-4-turbo, etc.

# OpenAI API Base URL (optional, for custom endpoints)
# OPENAI_API_BASE=https://api.openai.com/v1

# OpenAI Organization ID (optional)
# OPENAI_ORG_ID=your_org_id_here

# Evaluation Configuration
EVAL_BATCH_SIZE=10  # Number of test cases to process in parallel (not implemented yet)
EVAL_MAX_RETRIES=3  # Maximum retries for failed API calls
EVAL_RETRY_DELAY=1.0  # Delay between retries in seconds

# Vector Store Configuration
VECTOR_STORE_EXPIRE_DAYS=1  # Days before vector stores auto-delete
VECTOR_STORE_CHUNK_SIZE=512  # Chunk size for document processing (future feature)

# Timeout Configuration
ASSISTANT_RUN_TIMEOUT=300  # Maximum time to wait for assistant runs (seconds)
FILE_PROCESSING_TIMEOUT=30  # Maximum time to wait for file processing (seconds)

# Logging Configuration
OPENAI_LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Output Configuration
DEFAULT_OUTPUT_FILE=eval_results.json
SAVE_INTERMEDIATE_RESULTS=true  # Save results after each test case

# Rate Limiting
REQUESTS_PER_MINUTE=60  # Rate limit for API requests (not implemented yet)
DELAY_BETWEEN_REQUESTS=1.0  # Delay between requests in seconds 